<div class="separate">

  <div class="separate-left shadow-sm">
    <div class="container">
      <div class="text-center search-title">
        <h4 class="search-titlefont">複数検索</h4>
      </div>
      <%= search_form_for @q, url: search_restaurants_path, html: {id: "detailed-search-form"} do |f| %>
        <div class="row g-5 justify-content-center">
          <div class="col-md-7 col-lg-8">
            <div class="row g-3">
                <div class="col-12">
                <%= f.label :name, '店舗名', class:"form-label" %>
                <%= f.text_field :name, placeholder: '店舗名', value: params[:q]&.dig(:name), class:"form-control" %>
                </div>
                <div class="col-12">
                <%= f.label :prefecture_id_in, '都道府県' %>
                <br>
                <%= f.collection_check_boxes(:prefecture_id_in, Prefecture.all, :id, :name, {include_blank: "---"}) %>
                </div>
                <div class="col-12">
                <%= f.label :station, '駅名', class:"form-label" %>
                <%= f.text_field :station, placeholder: '駅名', value: params[:q]&.dig(:station), class:"form-control" %>
                </div>
                <div class="col-12">
                <%= f.label :genre_id_in, 'ジャンル' %>
                <br>
                <%= f.collection_check_boxes(:genre_id_in, Genre.all, :id, :name, {include_blank: "---"}) %>
                </div>
                <div class="col-12">
                <%= f.label :food, '食品名', class:"form-label" %>
                <%= f.text_field :food, placeholder: '食品名', value: params[:q]&.dig(:food), class:"form-control" %>
                </div>
                <div class="col-12 search-check">
                <%= f.label :price_id_in, '価格帯' %>
                <br>
                <%= f.collection_check_boxes(:price_id_in, Price.all, :id, :name, {include_blank: "---"}) %>
                </div>
                <div class="col-12">
                <%= f.label :user_nickname_cont, '紹介者名', class:"form-label" %>
                <%= f.text_field :user_nickname_cont, placeholder: '紹介者名', class:"form-control"  %>
                </div>
              <%= f.submit '検索', class:"re-submit search-submit" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="separate-right">
    <div class="album py-5">
      <div class="container">
        <% if @restaurants.count == 0 %>
          <div class="search-zero">
          <%= image_tag 'tankozosearch.png', :size => '100%' %>
          <h3 class="search-zeroin">検索結果は０件でした</h3>
          </div>
        <% else %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% @restaurants.each do |restaurant| %>
              <div class="col">
                <div class="card shadow-sm h-100">
                  <%= image_tag restaurant.image.variant(resize: '100%'), class: "bd-placeholder-img card-img-top h-100" %>
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary"><%=link_to "View", restaurant_path(restaurant), class:"btn-outline-secondary user-show"%></button>
                      </div>
                      <small class="text-muted hopelike-list">
                        <%= restaurant.name %>
                        <%= restaurant.prefecture.name %>
                        <%= l restaurant.created_at %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

  <p class="m-4 pb-4 text-center text-muted">&copy; Tankozo</p>
